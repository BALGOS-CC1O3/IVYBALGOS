<Window x:Class="Balgos_IPT101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flight Booking" Height="300" Width="400"
        Background="SkyBlue">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Flight Booking" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Name:"/>
            <TextBox Name="txtName" Margin="0,5" />

            <TextBlock Text="ContactNumber:"/>
            <TextBox Name="txtContactNumber" Margin="0,5" />

            <TextBlock Text="From:"/>
            <TextBox Name="txtFrom" Margin="0,5" />

            <TextBlock Text="To:"/>
            <TextBox Name="txtTo" Margin="0,5" />

            <TextBlock Text="Date:"/>
            <TextBox Name="txtDate" Margin="0,5" />

            <Button Content="Book Flight" Margin="0,20,0,0" Width="100" HorizontalAlignment="Center"/>
            
            
        </StackPanel>
    </Grid>
</Window>
